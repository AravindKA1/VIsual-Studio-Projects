@model Person

<h2>Insert New Person</h2>
<h3 class="message">@ViewBag.Message</h3>
<form asp-controller="Person" asp-action="Insert" method="post">
	<table border="0">
		<tr>
			<td class="right">
				<label asp-for="FirstName"></label>
			</td>
			<td>
				<input type="text" asp-for=FirstName />
				<span asp-validation-for=FirstName class="message"></span>
			</td>
		</tr>

		<tr>
			<td class="right">
				<label asp-for="LastName"></label>
			</td>
			<td>
				<input type="text" asp-for=LastName />
				<span asp-validation-for=LastName class="message"></span>
			</td>
		</tr>

		<tr>
			<td class="right">
				<label asp-for="Discriminator"></label>
			</td>
			<td>
				<input type="text" asp-for=Discriminator />
				<span asp-validation-for=Discriminator class="message"></span>
			</td>
		</tr>
		
		<tr>
			<td colspan="2">
				<button type=submit>Save</button>
			</td>
		</tr>
	</table>
</form>
<br />
<br />

