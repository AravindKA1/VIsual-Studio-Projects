@using Microsoft.AspNetCore.Identity
@using WaggleApplication.Areas.Identity.Data

@inject SignInManager<WaggleApplicationUser> SignInManager
@inject UserManager<WaggleApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
       <div class="navbar" >
           <div id="item1">
               <a asp-controller="Home" asp-action="HomePage">HomePage</a>
           </div>
           <div id="item2">
                 <a asp-controller="Home" asp-action="HomePage">Reports Page</a>
           </div>
       </div>
        <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
        </li>
    }
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>