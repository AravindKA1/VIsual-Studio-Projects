@model Register
<h2>Create New User Account</h2>
<form asp-controller="Identity" asp-action="Register" method="post">
	<table>
		<tr>
			<td class="right" ><label asp-for="UserName"></label> </td>
			<td class="left"><input type="text" asp-for="UserName"></input></td>
		</tr>

		<tr>
			<td class="right" ><label asp-for="Password"></label> </td>
			<td class="left"><input type="password" asp-for="Password"></input></td>
		</tr>

		<tr>
			<td class="right" ><label asp-for="ConfirmPassword"></label> </td>
			<td class="left"><input type="password" asp-for="ConfirmPassword"></input></td>
		</tr>

		<tr>
			<td class="right" ><label asp-for="Email"></label> </td>
			<td class="left"><input type="email" asp-for="Email"></input></td>
		</tr>

		<tr>
			<td class="right" ><label asp-for="FullName"></label> </td>
			<td class="left"><input type="text" asp-for="FullName"></input></td>
		</tr>

		<tr>
			<td class="right" ><label asp-for="BirthDate"></label> </td>
			<td class="left"><input type="date" asp-for="BirthDate"></input></td>
		</tr>
		<tr>
			<td colspan="2">
				<button type="submit">Create</button>
			</td>
		</tr>
	</table>
	<div asp-validation-summary="All" class="message"></div>
	<h3><a asp-controller="Identity" asp-action="SignIn">Go to sign in page</a></h3>
</form>